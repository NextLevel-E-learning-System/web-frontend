{
  "compileOnSave": true,
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "noEmit": true,
    "traceResolution": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"]
    }
  }
}
